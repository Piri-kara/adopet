<!DOCTYPE html>
<html>
  <head>
    <title>Adopet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <% if user_signed_in?%>
        <a href="/" class="header--icon">
          <%= image_tag 'logo_bottom.png' %>
        </a>    
        <ul class="header--lists">
          <li class="header--lists--list">
            <%= link_to "#{current_user.name}", user_path(id: current_user.id) %>
          </li>
          <li class="header--lists--list">HELP</li>
          <li class="header--lists--list">
            <%= link_to "SIGN OUT", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      <% else %>
        <a href="/" class="header--icon">
          <%= image_tag 'logo_bottom.png' %>
        </a>    
        <ul class="header--lists">
          <li class="header--lists--list">HELP</li>
          <li class="header--lists--list">SIGN IN</li>
          <li class="header--lists--list">SIGN UP</li>
        </ul>
      <% end %>
    </div>
    <%= render "shared/mordal"%>
    <%= yield %>
  </body>
</html>