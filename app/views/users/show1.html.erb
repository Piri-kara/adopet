      <div class="user-messages__box">
        <% if current_user.id == @user.id %>
          <p>里親募集中の子達</p>
          <div class="giving-animals">
            <% @animals.each do |animal| %>
              <div class="giving-animals__animal">
                <div class="giving-animals__animal--photo">
                  <%= image_tag "#{animal.images[0].image_url}" %>
                </div>
                <div class="giving-animals__animal--name">
                  <%= animal.name %>
                </div>
              </div>
              <div class="giving-animals__chatrooms">
                <div class="giving-animals__chatrooms--names">
                  <% @rooms.where(animal_id: animal.id).each do |room| %>
                    <%=link_to animal_room_path(animal_id: room.animal_id, id: room.id) do%>
                      <% if current_user.name == room.users[0].name %>
                        <div class="giving-animals__chatrooms--names--name">
                          <%= room.users[1].name %>
                        </div>
                      <% else %>
                        <div class="giving-animals__chatrooms--names--name">
                          <%= room.users[0].name %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <%end%>
          </div>
        <% end %>
      </div>